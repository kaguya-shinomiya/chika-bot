datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int    @id @default(autoincrement())
  userId  String @unique
  tag     String
  ribbons Int
}

model Guild {
  id        Int        @id @default(autoincrement())
  guildId   String     @unique
  prefix    String?
  shiritori Shiritori?
  balloon   Balloon?
}

model Shiritori {
  id       Int    @id @default(autoincrement())
  guild    Guild  @relation(fields: [guildId], references: [guildId])
  guildId  String @unique
  handSize Int?
}

model Balloon {
  id      Int    @id @default(autoincrement())
  guild   Guild  @relation(fields: [guildId], references: [guildId])
  guildId String @unique
  minVol  Int?
  maxVol  Int?
}
